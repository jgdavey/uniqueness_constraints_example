<h1>Lists</h1>

<ul class="lists">
<% lists.each do |list| %>
  <li class="list">
    <h2>
      <%= list.name %>
      (<%= link_to "edit", edit_list_path(list) %>)
    </h2>

    <ul class="items" data-sort-url="<%= sort_list_items_path(list) %>">
      <%= render list.items %>
    </ul>

    <%= form_for list.items.build, url: list_items_path(list), remote: true do |list_form| %>
      <%= list_form.text_field :name, placeholder: "Add an item" %><button type="submit">+</button>
    <% end %>
  </li>
<% end %>
</ul>

<p><%= link_to "New list", new_list_path %></p>
